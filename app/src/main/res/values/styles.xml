<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accentPink</item>
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">#0D47A1</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>


    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colors for dots and hamburger. -->
        <item name="android:textColorSecondary">#fff</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorAccent">@color/accentPink</item>
        <item name="textColorAlertDialogListItem">#5f5f5f</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="edit_text" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/primaryBlue</item>
    </style>
</resources>
